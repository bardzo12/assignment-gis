<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_text_color" />
            <corners android:radius="8dp" />
            <stroke
                android:width="3dp"
                android:color="@color/selected_text_color" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/noSelectButton" />
            <corners android:radius="8dp" />
            <stroke
                android:width="3dp"
                android:color="@color/noSelectButton" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_text_color" />
            <corners android:radius="8dp" />
            <stroke
                android:width="3dp"
                android:color="@color/selected_text_color" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_text_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_text_color" />
            <corners android:radius="8dp" />
            <stroke
                android:width="3dp"
                android:color="@color/selected_text_color" />
        </shape>
    </item>

</selector>